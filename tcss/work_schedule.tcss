Calendar {
    align: center middle;
}

.calendar-days {
    layout: grid;
    grid-size: 7 1;
    height: auto;
    background: white;
}

.calendar-top {
    height: auto;
}

.day-container {
    align: center middle;
    outline: solid red;
}

.title {
    align: center middle;
    padding: 1;
    height: auto;
}

#calendar-container {
    align: center middle;
    height: 75%;
    width: 75%;
}

#date-container {
    layout: grid;
    grid-size: 7 6;
}